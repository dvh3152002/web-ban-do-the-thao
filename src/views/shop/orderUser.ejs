<!DOCTYPE html>
<html lang="en">
  <%- include('./head') %>

<body>
    <%- include('../shop/menuShop.ejs') %>
    <div class="container" style="min-height: 50vh;">
        <h3>Danh sách đơn hàng của bạn</h3>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Người nhận</th>
                <th scope="col">Số điện thoại</th>
                <th scope="col">Địa chỉ</th>
                <th scope="col">Ngày đặt</th>
                <th scope="col">Trạng thái</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% for(let i=0;i<customers.length;i++){ %>
                <form action="/updateOrderUser/<%=customers[i].id%>" method="post">
                  <tr>
                    <td class="col-2"><%= customers[i].name %></td>
                    <td class="col-2"><%= customers[i].phone_number %></td>
                    <td class="col-2"><%= customers[i].address %></td>
                    <td class="col-2"><%= customers[i].createdAt %></td>
                    <th class="col-2"><%=customers[i].status%></th>
                    <td class="col-2">
                      <input type="text" name="status" value="<%=customers[i].status%>" hidden>
                      <a href="/detailOrderUser/<%=customers[i].id %>" class="btn btn-success">Xem</a>
                      <%if(customers[i].status==='Đang xử lí'){%>
                        <button class="btn btn-danger">Hủy đơn</button>
                      <%}else{%>
                        <button class="btn btn-warning">Đặt lại</button> 
                      <%}%>
                    </td>
                </tr>
              </form>
              <% } %>
          </tbody>
        </table>
    </div>
      
    </div>
    <%- include('../shop/footer.ejs') %>
</body>
</html>