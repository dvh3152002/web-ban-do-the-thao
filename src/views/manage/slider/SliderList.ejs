<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/head') %>
</head>
<body>
  <%- include('../../partials/menu') %>
  <div class="manage-container">
      <%- include('../../partials/slider') %>
      <div class="manage-right">
          <div class="row">
              <div class="col-12"><h3>Slider</h3></div>
              <div class="col-md-12 mb-2">
                  <a href="/sliderCreate" class="btn btn-primary float-end">Add</a>
              </div>
              <div class="col-md-12">
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Tên Slider</th>
                        <th scope="col">Mô tả</th>
                        <th scope="col">Hình ảnh</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for(let i=0;i<data.length;i++){ %>
                        <form action="/sliderDelete" method="post">
                          <tr>
                          <td class="col-3"><%= data[i].name %></td>
                          <td class="col-3"><%= data[i].description%></td>
                          <td class="col-2">
                            <img class="product-img" src="<%= data[i].image %>" alt="">
                          </td>
                          <td class="col-2">
                            <a href="/sliderEdit/<%=data[i].id %>" class="btn btn-success">Sửa</a>
                              <input type="text" name="id" value="<%=data[i].id %>" hidden>
                              <button class="btn btn-danger">Xóa</button>
                          </td>
                        </tr>
                      </form>
                      <% } %>
                    </tbody>
                </table>
              </div>
              <nav>
                <ul id="menu" class="pagination pagination-sm">
                  <%for(let i=0;i<count;i++){%>
                    <li class="page-item <%=page===i+1?'active':''%>" aria-current="page">
                      <a href="/sliderList/<%=i+1%>" class="page-link"><%=i+1%></a>
                    </li>
                  <%}%>
                </ul>
              </nav>
          </div>
        </div>
    </div>
</body>
</html>